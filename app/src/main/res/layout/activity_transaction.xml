<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:id="@+id/linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorPrimary"
                    android:gravity="center">
                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle"
                        android:padding="10dp"
                        android:src="@drawable/translogo"
                        android:tint="@color/white"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/white"
                        android:text="TRANSAKSI"
                        android:textSize="22dp"/>

            </LinearLayout>

            <!--<ImageView-->
            <!--android:id="@+id/imageView1"-->
            <!--android:layout_width="20dp"-->
            <!--android:rotation="45"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_below="@+id/linearlayout"-->
            <!--android:src="@drawable/square"-->
            <!--android:layout_centerHorizontal="true"/>-->

            <RelativeLayout
                    android:id="@+id/rlharga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/linearlayout">
                <ImageView
                        android:id="@+id/imgView_harga"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="24dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp" />

                <EditText
                        android:layout_width="248dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_harga"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="0dp"
                        android:layout_toRightOf="@+id/imgView_harga"
                        android:background="@color/editTextBackground"
                        android:hint="harga"
                        android:paddingLeft="20dp"
                        android:textSize="15dp" />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rlukuran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/rlharga">
                <ImageView
                        android:id="@+id/imgView_ukuran"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="24dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp" />

                <EditText
                        android:layout_width="248dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_ukuran"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="0dp"
                        android:layout_toRightOf="@+id/imgView_ukuran"
                        android:background="@color/editTextBackground"
                        android:hint="ukuran"
                        android:paddingLeft="20dp"
                        android:textSize="15dp" />
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rljumlah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/rlukuran">
                <ImageView
                        android:id="@+id/imgView_jumlah"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="24dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp" />

                <EditText
                        android:layout_width="248dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_jumlah"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="0dp"
                        android:layout_toRightOf="@+id/imgView_jumlah"
                        android:background="@color/editTextBackground"
                        android:hint="jumlah"
                        android:paddingLeft="20dp"
                        android:textSize="15dp" />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rlkode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/rljumlah">
                <ImageView
                        android:id="@+id/imgView_kode"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="24dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp" />

                <EditText
                        android:layout_width="248dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_kode"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="0dp"
                        android:layout_toRightOf="@+id/imgView_kode"
                        android:background="@color/editTextBackground"
                        android:hint="jumlah"
                        android:paddingLeft="20dp"
                        android:textSize="15dp" />
            </RelativeLayout>

            <Button
                    android:layout_width="281dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlkode"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPrimary"
                    android:text="Input"
                    android:textColor="@color/white">

            </Button>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>